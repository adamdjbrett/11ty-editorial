---
layout: base.njk
---
<div class="col-md-10 mx-auto">
{% include "partials/nav_desktop.njk" %}
		<div class="row mt-5">
		<div class="col-md-12 p-3 p-md-5">
            <h1 class="hero-post-title mb-5"><strong>{{title}}</strong></h1>
			{% if image %}<img class="img-post mb-5 rounded" alt="{{title}}" width="100%" height="100%" 
			src="{{image}}"/>{% endif %}
		    {{content|safe}}
	{% if tags %}<p class="small mt-3">
			Tags: {%- for tag in tags | filterTagList %}
	{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
	<a href="{{ tagUrl }}" class="btn btn-sm btn-outline-pink ms-2">{{ tag }}</a>
			{% endfor %}</p>{% endif %}
			</div>
{%- if collections.posts %}
{%- set previousPost = collections.posts | getPreviousCollectionItem %}
{%- set nextPost = collections.posts | getNextCollectionItem %}
{%- if nextPost or previousPost %}
		<div class="col-md-12 p-3 p-md-5 border-top border-bottom">
		<div class="row">
		<div class="col-6">
		{%- if previousPost %}<a href="{{ previousPost.url }}" class="none"><i class="fas fa-arrow-left me-3"></i> Previous</a>{% endif %}
		</div>
		<div class="col-6 text-end">
		{%- if nextPost %}<a href="{{ nextPost.url }}" class="none">Next <i class="fas fa-arrow-right ms-3"></i></a>{% endif %}
		</div>
		</div>
		
		</div>
{%- endif %}
{%- endif %}
</div>
	
</div>